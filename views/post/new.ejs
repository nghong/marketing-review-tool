<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">New post</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <form role="form" id="new-post-form" method="POST" action="/post">
      <div class="form-group">
        <label for="inputTitle">Title</label>
        <input class="form-control" id="inputTitle" data-error="Title is required" autofocus required>
        <span class="help-block with-errors"></span>
      </div>
      <div class="form-group">
        <label for="inputContent">Link to content</label>
        <input class="form-control" id="inputContent" data-error="Link is required" required>
        <span class="help-block with-errors"></span>
      </div>
      <div class="form-group">
        <label for="inputMetaTitle">Meta Title</label>
        <input class="form-control" id="inputMetaTitle">
        <span class="help-block with-warnings"></span>
      </div>
      <div class="form-group">
        <label for="inputMetaDescription">Meta Description</label>
        <textarea class="form-control" id="inputMetaDescription" rows="3"></textarea>
        <span class="help-block with-warnings"></span>
      </div>
      <div class="form-group">
        <label for="inputFacebookStatus">Facebook Status</label>
        <textarea class="form-control" id="inputFacebookStatus" rows="4"></textarea>
        <span class="help-block with-warnings"></span>
      </div>
      <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button> 
    </form>
  </div>
</div>