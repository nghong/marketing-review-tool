<!DOCTYPE html>
<html>
  <head>
    <title>Marketing Review Tool</title>
    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/bootstrap.css">
    <link rel="stylesheet" href="/styles/bootstrap-theme.css">
    <link rel="stylesheet" href="/styles/importer.css">
    <!--STYLES END-->
  </head>
  <body>
    <div class="container-fluid">
      <!-- Creates the navbar -->
      <nav class="navbar navbar-default navbar-inverse">
        
        <!-- This creates the mechanism for the collapse button -->
        <button type="button" class="navbar-toggle">
        
        <!-- This controls the number of lines in the image when the nav collapse -->
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
        <!-- This is the brand on the left-hand side. -->
        <a class="navbar-brand" href="/#"> Marketing Review Tool</a>
        <div class="collapse navbar-collapse">
          <!-- LOGIN FORM -->
          <form class="navbar-form navbar-right">
            <!-- E M A I L -->
            <div class="form-group">
              <input type="email" placeholder="Email" name="email" class="form-control" required>
            </div>
            <!-- P A S S W O R D -->
            <div class="form-group">
              <input type="password" placeholder="Password" name="password" class="form-control" required>
            </div>
            <!-- S U B M I T -->
            <button type="submit" class="btn btn-success">
            <span>Sign in</span>
            </button>
            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
          </form>
        </div>
      </nav>
    </div>
    <form id="sign-up-form" class="form-signin" name="signup" data-toggle="validator" role="form">
      <h2>Create an account</h2>
      <div class="row">
        <!-- N A M E -->
        <div class="form-group">
          <label for="inputName" class="control-label">Display name</label>
          <input type="text" class="form-control" placeholder="John Snow" name="name" id="inputName" data-error="Display name is required" required>
          <span class="help-block with-errors"></span>
        </div>
        <!-- E M A I L -->
        <div class="form-group">
          <label for="inputEmail">Email address</label>
          <input type="email" class="form-control" placeholder="johnsnow@got.com" name="email" id="inputEmail" data-error="Invalid email address" required>
          <span class="help-block with-errors"></span>
        </div>
        <!-- P A S S W O R D -->
        <div class="form-group">
          <label for="inputPassword">Password</label>
          <input type="password" class="form-control" placeholder="at least 6 characters" name="password" id="inputPassword" data-minlength="6" data-error="At least 6 characters" required>
          <span class="help-block with-errors"></span>
        </div>
        <!-- C O N F I R M  P A S S W O R D -->
        <div class="form-group">
          <label for="inputConfirmation">Re-enter password</label>
          <input type="password" class="form-control" placeholder="retype your password" name="confirmation" id="inputConfirmation" data-match="#inputPassword" data-match-error="Password cofirmation does not match" required>
          <span class="help-block with-errors"></span>
        </div>
      </div>
      <br/>
      <!-- Disable signup button until the form has no errors -->
      <button class="btn btn-primary btn-lg btn-block" type="submit">
      <span>Submit</span>
      </button>
      <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    </form>
    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/dependencies/jquery-1.11.3.js"></script>
    <script src="/js/dependencies/bootstrap.js"></script>
    <script src="/js/dependencies/validator.js"></script>
    <!--SCRIPTS END-->
    <script>
      
    </script>
  </body>
</html>